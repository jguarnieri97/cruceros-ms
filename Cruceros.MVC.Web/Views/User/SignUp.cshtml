@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/form-style.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="container">
        <div class="row form-row">
            <div class="col form-col">
                <h3 class="form-tittle">REGISTRATE</h3>
                <form class="style-form">
                    <div class="mb-3 form-input">
                        <input type="text" class="form-control" id="name" placeholder="INGRESA TU NOMBRE:">
                    </div>
                    <div class="mb-3 form-input">
                        <input type="email" class="form-control" id="email" placeholder="INGRESA TU MAIL:">
                    </div>
                    <div class="mb-3 form-input">
                        <input type="password" class="form-control" id="password" placeholder="INGRESA TU CONTRASEÑA:">
                    </div>
                    <div class="mb-3 form-input">
                        <input type="password" class="form-control" id="re-password" placeholder="REINGRESA TU CONTRASEÑA:">
                    </div>
                    <button type="submit" class="btn btn-primary form-btn-submit">LISTO</button>
                </form>
                <h5 class="form-footer">¿Ya tienes una cuenta? <a href="#">Inicia Sesion</a></h5>
            </div>
        </div>
    </div>
</body>

</html>
