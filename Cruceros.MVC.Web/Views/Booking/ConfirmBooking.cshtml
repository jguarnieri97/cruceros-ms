@{
    <head>
        <link rel="stylesheet" href="~/css/reserva.css" asp-append-version="true" />
    </head>
}

<div class="container">
    <div class="row">
        <div class="col col-form">
            <p class="reserva-text">TU RESERVA YA CASI ESTÁ LISTA</p>
            <p class="complete-data-text">Completá los datos restantes</p>
            <form class="form-pago" action="/procesar-pago" method="POST">
                <input class="form-control" type="number" id="cantidadPasajeros" name="cantidadPasajeros" min="1" required placeholder="CANT. DE PASAJEROS:">
                <input class="form-control" type="text" id="numeroTarjeta" name="numeroTarjeta" pattern="\d{16}" placeholder="NRO. DE TARJETA:" required>
                <input class="form-control" type="number" id="dniTitular" name="dniTitular" required placeholder="DNI DEL TITULAR:">
                <input class="form-control" type="text" id="nombreTitular" name="nombreTitular" required placeholder="NOMBRE DEL TITULAR:">
                <div class="form-pago-style">
                    <input class="form-control" type="text" id="expiracion" name="expiracion" pattern="(0[1-9]|1[0-2])\/[0-9]{2}" placeholder="EXP:" required>
                    <input class="form-control" type="number" id="cvv" name="cvv" min="100" max="999" required placeholder="CVV:">
                </div>
                <button class="btn btn-primary btn-naveo" type="submit">RESERVAR</button>
            </form>
        </div>
    </div>
</div>


